<%- include('./partials/head.ejs')%>

  <body>
    <div class="titlebar">

      <%- include('./partials/header.ejs')%>

      <div class="topnav">
        <nav class = 'menubar'>
          <a href="/home">
            <button type="button" class = "lnr lnr-home"name="Menu"></button>
          </a>
          <a href="/library/addnew">
            <button class='addButton lnr lnr-plus-circle'type="button"></button>
          </a>


        </nav>
      </div>
      <div class="search">
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search beers...">
      </div>
    </div>

    <div>
      <ul id = "beerList">
      <%for(let i = 0; i < beer.length; i++){%>
        <li id='beerEntry'>
          <a href="/library/<%=beer[i]._id%>/show">
            <h3 class="beerTitle"><%=beer[i].name%></h3>
          </a>
          <a href = "/library/<%=beer[i]._id%>/show">
            <img class='beerimg' src="<%=beer[i].img%>" onerror="this.onerror=null;this.src='https://i.imgur.com/UESZFZQ.png?1';">
          </a>
        </li>
      <%}%>
      </ul>
    </div>

    <script>
    function myFunction() {
      // Declare variables
      var input, filter, ul, li, a, i, txtValue;
      input = document.getElementById('myInput');
      filter = input.value.toUpperCase();
      ul = document.getElementById("beerList");
      li = ul.getElementsByTagName('li');

      // Loop through all list items, and hide those who don't match the search query
      for (i = 0; i < li.length; i++) {
        a = li[i].getElementsByTagName("a")[0];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          li[i].style.display = "";
        } else {
          li[i].style.display = "none";
        }
      }
    }
    </script>
  </body>
</html>
